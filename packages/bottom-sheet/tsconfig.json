{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "noEmit": true,
    "module": "esnext",
    "jsx": "react-native",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
