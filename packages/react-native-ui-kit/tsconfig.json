{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "src",
    "noEmit": true,
    "module": "esnext",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.md"],
  "exclude": [
    "dist",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
